/**
 * Module dependencies
 */

@require './variables'
@require 'shoelace-ui-font-size'
@require 'shoelace-ui-line-height'
@require 'shoelace-ui-spacing'

/**
 * Apply `legend` styles.
 */

legend
  border 0
  border-bottom 1px solid legend--border-color
  color legend--color
  display block
  font-size (font-size--base * 1.5)
  line-height inherit
  margin-bottom line-height--computed
  padding 0
  width 100%
